
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}
@model IEnumerable<CartItem>

<div class="colorlib-product">
	<div class="container">
	
		<div class="row row-pb-lg">
			<div class="col-md-12">
				<table class="table">
					<thead class="table-danger">
						<tr>
							<th>
								Name Products
							</th>

							<th>
								Avatar Products
							</th>

							<th>
								Size Products
							</th>

							<th>
								Price Products
							</th>

							<th>
								Quantity Products
							</th>

							<th>
							Total
							</th>
						</tr>
					</thead>
					<tbody>
						@{
							int i = 1;
						}
						@foreach (var item in Model)
						{
							i = i + 1;
							string cls = "table-success";
							if (i % 2 == 0)
							{
								cls = "table-primary";
							}
							else
							{
							}
							<tr class="@cls">
								<td>
									<div class="display-tc">
										<h5>@item.Name</h5>
									</div>
								
								</td>
								<td>
									<img style="height: 100px;" src="../../ImageProducts/@item.Hinh">

								</td>

								<td>
									<div class="one-eight text-center">
										<div class="display-tc">
											<span class="price">@item.size</span>
										</div>
									</div>
								</td>


								<td>
									<div class="one-eight text-center">
										<div class="display-tc">
											<span class="price">@item.Dongia</span>
										</div>
									</div>

								</td>


								<td>
									<div class="one-eight text-center">
										<div class="display-tc">
											<input type="text" id="quantity" name="quantity" class="form-control input-number text-center" value="@item.soluong" min="1" max="100">
										</div>
									</div>
								</td>

								<td>
									<div class="one-eight text-center">
										<div class="display-tc">
											<span class="price">@item.ThanhTien</span>
										</div>
									</div>

								</td>

							</tr>
						}
					</tbody>
				</table>


			
				
				
			</div>
		</div>

	
	</div>
</div>

